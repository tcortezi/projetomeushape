<% provide(:title, "Login") %>
<% content_for :navbar do %>
<%= render 'layouts/header-clean' %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-6 ml-auto mr-auto">
      <h1 class="text-center">Bem Vindo de Volta</h1>
      <br />

      <div class="card">
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group input-group">
            <div class="input-group-prepend">
              <div class="input-group-text"><i class="fa fa-envelope"></i></div>
            </div>
            <%= f.email_field :email, autofocus: true, placeholder: "Email", required: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="form-group input-group">
            <div class="input-group-prepend">
              <div class="input-group-text"><i class="fa fa-key"></i></div>
            </div>
            <%= f.password_field :password, placeholder: "Senha", required: true, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.button "Entrar", class: "btn btn-primary btn-lg btn-block", data: { "disable-with": "<i class='fa fa-spinner fa-spin'></i> Entrando..." } %>
          </div>

          <div class="text-center">
            <%= link_to "Ainda não é cadastrado?", signup_path %>
          </div>
          <div class="text-center">
            <%= link_to "Esqueci minha senha", new_user_password_path, class: "text-muted" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
