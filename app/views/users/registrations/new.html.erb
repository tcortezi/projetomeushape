<% provide(:title, "Cadastre-se") %>
<% content_for :navbar do %>
<%= render 'layouts/header-clean' %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-6 ml-auto mr-auto">
      <h1 class="text-center">Junte-se a Nós!</h1>
      <br />

      <div class="card">
        <div class="card-body">

          <h4 class="card-title">Cadastre-se Grátis</h4>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

            <div class="form-row">
              <div class="col form-group">
                <%= f.text_field :name, autofocus: true, placeholder: "Nome", required: true, class: "form-control" %>
              </div>
              <div class="col form-group">
                <%= f.text_field :lastname, autofocus: true, placeholder: "Sobrenome", required: true, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.email_field :email, autocomplete: "email", autofocus: true, placeholder: "Email", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", placeholder: "Senha", required: true, class: "form-control" %>
              <% if @minimum_password_length %>
              <small class="form-text text-muted">(<%= @minimum_password_length %> dígitos mínimos)</small>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "off", required: true, placeholder: "Confirme sua senha", class: "form-control" %>
            </div>

            <p><small>Ao cadastrar-se, você concorda com a <%= link_to "política de privacidade", "#" %> e os <%= link_to "termos de uso", "#" %>.</small></p>

            <div class="form-group">
              <%= f.button "Cadastre-se", class: "btn btn-primary btn-lg btn-block", data: { "disable-with": "<i class='fa fa-spinner fa-spin'></i> Cadastrando..." }  %>
            </div>

            <div class="text-muted text-sm-left text-md-right">
              <small>
              <%= render "devise/shared/links" %>
              </small>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

