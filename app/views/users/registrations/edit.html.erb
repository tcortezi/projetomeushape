<% content_for :navbar do %>
<%= render 'layouts/header-clean' %>
<% end %>

<div class="container mt-4 pb-2">
  <div class="row">
    <div class="col-sm-8 ml-auto mr-auto">
      <h1>Minha Conta</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= devise_error_messages! %>

      <div class="card">
        <div class="card-body">

          <h4 class="page-header">Editar Perfil</h4>
            <div class="form-row">
              <div class="col form-group">
                <label>Nome</label>
                <%= f.text_field :name, autofocus: true, class: "form-control" %>
              </div>
              <div class="col form-group">
                <label>Sobrenome</label>
                <%= f.text_field :lastname, autofocus: true, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <label>Email</label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <small>Aguardando confirmação pelo e-mail: <%= resource.unconfirmed_email %></small>
            <% end %>

            <div class="form-group">
              <label>Senha <small class="text-muted">Deixe em branco caso não queira alterá-la</small></label>
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              <% if @minimum_password_length %>
              <small class="form-text text-muted">(<%= @minimum_password_length %> dígitos mínimos)</small>
              <% end %>
            </div>

            <div class="form-group">
              <label>Confirme sua senha</label>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>

            <div class="form-group">
              <label>Senha atual <small class="text-muted">Necessário para salvar as alterações</small></label>
              <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.button "Alterar", class: "btn btn-primary btn-lg", data: { "disable-with": "<i class='fa fa-spinner fa-spin'></i> Alterando..." } %>
            </div>
            <% end %>

            <hr />

            <h4 class="page-header">Cancelar minha conta</h4>
            <p>Podemos ajudar com algo? <%= link_to "Entre em contato", "#" %></p>
            <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "d-none" %></p>
            <br />
            <%= link_to "Voltar", :back %>
        </div>
      </div>
    </div>
  </div>
</div>



